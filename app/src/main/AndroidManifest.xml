<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.myretrofit">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="your key"/>

        <activity
            android:name=".activity.HomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RecyclerViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".activity.ActionMenuActivity">
        </activity>
        <activity android:name=".activity.ChooseCityActivity">
        </activity>
        <activity
            android:name=".activity.CityPickerActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity android:name=".activity.TabsIndicatorActivity"/>
        <activity
            android:name=".activity.PracticeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.ImageViewActivity"/>
        <activity android:name=".activity.ImageActivity"/>
        <activity android:name=".activity.DiyActivity"/>
        <activity
            android:name=".activity.CustomActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activity.SplashActivity"/>
        <activity android:name=".activity.WcdbActivity"/>
        <activity android:name=".activity.ChartActivity"/>
        <activity android:name=".activity.SplashAdvertisingActivity"/>
        <activity
            android:name=".activity.BarActivity"
            android:label="伸缩状态栏"/>
        <activity android:name=".activity.SearchBarActivity"/>
    </application>

</manifest>